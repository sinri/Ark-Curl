{
  "name": "sinri/ark-curl",
  "description": "The cURL component for Ark 2.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Sinri Edogawa",
      "email": "e.joshua.s.e@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "ext-json": "*",
    "ext-curl": "*",
    "sinri/ark-core": "~2.7",
    "psr/http-client": "~1.0"
  },
  "suggest": {
